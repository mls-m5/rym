# Using matmake2 https://github.com/laserskold/matmake2

rym
  out = rym
  command = [exe]
  flags =
    -stdlib=libc++
  eflags =
    -stdlib=libc++
  config =
    c++17
    Wall
    modules
  src =
    main-nix.cpp
    *.cppm

  ldflags =
    -lGL
    -lSDL2

  flags =
    -O2

all
  in = @rym
  includes =
    /usr/include/SDL2/
